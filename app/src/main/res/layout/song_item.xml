<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="3dp">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardCornerRadius="6dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp">
            <ImageView
                android:id="@+id/artist_image"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"/>
            <TextView
                android:id="@+id/song_time"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_alignBottom="@id/artist_image"
                android:layout_alignLeft="@id/artist_image"
                android:layout_alignRight="@id/artist_image"
                android:background="@color/colorFade"
                android:textColor="@color/colorAccent"
                android:textStyle="bold"
                android:textSize="14sp"
                android:shadowDy="2"
                android:shadowDx="2"
                android:shadowRadius="3"
                android:shadowColor="@color/colorPrimaryDark"
                tools:text="1:21"/>
            <TextView
                android:id="@+id/artist_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginLeft="6dp"
                android:layout_toRightOf="@id/artist_image"
                android:textColor="@color/colorAccent"
                android:textSize="20sp"
                android:shadowDy="2"
                android:shadowDx="2"
                android:shadowRadius="3"
                android:shadowColor="@color/colorAccent"
                tools:text="ARTIST NAME"/>
            <TextView
                android:id="@+id/artist_song"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginLeft="6dp"
                android:layout_toRightOf="@id/artist_image"
                android:layout_below="@id/artist_name"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"
                android:shadowDy="1"
                android:shadowDx="1"
                android:shadowRadius="1"
                android:shadowColor="@color/colorAccent"
                tools:text="ARTIST SONG TITLE"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>